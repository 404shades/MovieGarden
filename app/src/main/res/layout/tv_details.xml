<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:id="@+id/cardTvDet1"
        android:elevation="4dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="#66000000">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/YoutubePlayerTtv"
            android:visibility="visible">
        </FrameLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/cardTvDet1"
        android:elevation="3dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="#66000000"
        android:id="@+id/cardTvDet2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154dp"
            android:layout_marginTop="13dp"
            android:textSize="23sp"
            android:ellipsize="end"
            android:maxLines="2"
            android:lines="2"
            android:textColor="#ffffff"
            style="@style/TextAppearance.AppCompat"
            android:textStyle="bold"
            android:id="@+id/TvDetTitle"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginTop="65dp"
        android:layout_marginStart="24dp"
        app:cardBackgroundColor="#66000000"
        android:elevation="4dp"
        app:cardCornerRadius="5dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:id="@+id/imgTvDetail"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#66000000"
        android:layout_below="@id/cardTvDet2"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="7dp"
        android:padding="1dp"
        android:elevation="4dp"
        app:cardCornerRadius="2dp"
        android:id="@+id/cardTvDet3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                style="@style/TextAppearance.AppCompat"
                android:textSize="21sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:id="@+id/TvDetRelDate"/>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="7dp"
                app:cardBackgroundColor="#66000000"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:layout_below="@id/TvDetRelDate"
                android:id="@+id/cardTvDet6">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="17sp"
                android:id="@+id/TvDetOverview"
                android:textColor="#ffffff"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_genres_tv"
                android:layout_below="@id/cardTvDet6"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="3dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardTvDet3"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="1dp"
        app:cardCornerRadius="2dp"
        android:elevation="4dp"
        android:id="@+id/cardTvDet4"
        app:cardBackgroundColor="#66000000">
        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="1dp"
            android:id="@+id/recyclerCompanyTv"/>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardTvDet4"
        android:elevation="4dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        app:cardBackgroundColor="#66000000"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="2dp"
        android:paddingBottom="15dp"
        android:id="@+id/cardTvDet5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/textTvTitleSeasons"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/recyclerSeasonsTvDet"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
</ScrollView>