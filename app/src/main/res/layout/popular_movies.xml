<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.rohanmalik.finalmovie.Popularmovies">
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relative1">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:elevation="4dp"
                app:cardCornerRadius="3dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:id="@+id/cardView1">
                <FrameLayout
                    android:id="@+id/youTubePlayer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:id="@+id/cardView3"
                android:elevation="3dp"
                android:layout_marginTop="4dp"
                app:cardBackgroundColor="#66000000"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_below="@id/cardView1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="154dp"
                    android:layout_marginTop="13dp"
                    android:textSize="23sp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:lines="2"
                    android:textColor="#ffffff"
                    style="@style/TextAppearance.AppCompat"
                    android:textStyle="bold"
                    android:id="@+id/movieTitlePoster"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:layout_marginTop="65dp"
                android:layout_marginStart="24dp"
                app:cardCornerRadius="5dp"
                android:id="@+id/cardView2">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:id="@+id/imageView"/>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative1"
            android:elevation="4dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            app:cardBackgroundColor="#66000000"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="2dp"
            android:paddingBottom="15dp"
            android:id="@+id/cardView4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/typePopular"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/recyclerPopular"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView4"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:elevation="4dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="#66000000"
        android:id="@+id/cardView5">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                style="@style/TextAppearance.AppCompat"
                android:textColor="#ffffff"
                android:id="@+id/Collection_Top_Rated_home"
                android:textStyle="bold"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/collection_Top_recycler"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardView5"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:elevation="4dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="2dp"
        app:cardBackgroundColor="#66000000"
        android:id="@+id/cardView6">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="2dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:id="@+id/typePopularTv"/>
            <android.support.v7.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/recyclerPopularTvShows"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>