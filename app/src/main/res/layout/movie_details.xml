<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
            android:elevation="4dp"
            android:background="#66000000"
            android:id="@+id/cardDet1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/backCoverMovie"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardDet3"
            android:elevation="3dp"
            android:layout_marginTop="4dp"
            app:cardBackgroundColor="#66000000"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:layout_below="@id/cardDet1">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154dp"
            android:layout_marginTop="13dp"
            android:textSize="23sp"
            android:textColor="#ffffff"
            style="@style/TextAppearance.AppCompat"
            android:textStyle="bold"
            android:id="@+id/detMovieTitle"
            android:lines="1"
            android:maxLines="1"
            android:ellipsize="end"/>
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="154dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:lines="2"
            android:textSize="18sp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_below="@id/detMovieTitle"
            style="@style/TextAppearance.AppCompat"
            android:textColor="#ffffff"
            android:id="@+id/movie_tagline"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_marginTop="65dp"
            android:layout_marginStart="24dp"
            app:cardCornerRadius="5dp"
            android:id="@+id/cardDet2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/movie_posterdet"/>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#66000000"
            android:layout_below="@id/cardDet3"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:elevation="4dp"
            app:cardCornerRadius="2dp"
            android:id="@+id/cardDet4">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="17dp"
                android:layout_marginRight="3dp"
                android:id="@+id/movie_release_date"
                android:textSize="20sp"
                android:textColor="#ffffff"
                style="@style/TextAppearance.AppCompat"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/movie_release_date"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="3dp"
                    android:id="@+id/overview_det"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="4dp"
                    android:paddingRight="2dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/overview_det"
                    android:id="@+id/type_movie_recycler"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardDet4"
            android:elevation="4dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            app:cardBackgroundColor="#66000000"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="2dp"
            android:paddingBottom="15dp"
            android:id="@+id/cardDet5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/titleCast"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/recycler_cast"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:padding="3dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardDet5"
            android:elevation="4dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            app:cardBackgroundColor="#66000000"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="2dp"
            android:paddingBottom="15dp"
            android:id="@+id/cardView4">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="2dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.AppCompat"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:id="@+id/typeSimilar"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/recyclerSimilar"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>